<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    	
   	android:layout_width="fill_parent"
   	android:layout_height="fill_parent" 
   	>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"		
		android:layout_weight="0.5"
		android:layout_alignParentLeft="true"		
		>
		<TextView
			android:id="@+id/goalinfo_playername"
			android:textStyle="bold"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"			
			android:textSize="25sp"
		/>
	</LinearLayout>	
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:layout_weight="0.5"	
		android:layout_alignParentRight="true" 	
		>
		<Button
 			android:id="@+id/goal_info_listitem_btn_minus"
    		android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
    		android:text="@string/goal_info_listitem_btn_minus_txt"  		
    		android:textStyle="bold"    
    		android:layout_gravity="left"		 
    	/>	
		<TextView
			android:id="@+id/goalinfo_playerscore"			
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"		
			android:textSize="35sp"
			android:layout_gravity="center"
		/>
		<Button
 			android:id="@+id/goal_info_listitem_btn_plus"
    		android:layout_height="wrap_content"
    		android:layout_width="wrap_content"
    		android:text="@string/goal_info_listitem_btn_plus_txt"    		
    		android:textStyle="bold"   	
    		android:layout_gravity="right"		    
    	/>
	</LinearLayout>
</RelativeLayout>		
